@model MccSoft.PdfGenerator.App.Views.Models.FooterModel
@{
    Layout = "./_Layout.cshtml";
}
<style>
    .footer {
        padding-left: 2.5%;
        padding-bottom: 3mm;
        height: 12mm;
        width: calc(99% - (11mm * 2));
    }

    .footer-line {
        height: 1.5mm;
        margin-bottom: 1.5mm;
        border-radius: 2px;
        background-color: #c7c8ca;
    }

    .footer-body {
        height: 9mm;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .footer-logo { height: inherit; }

    .footer-report {
        text-align: right;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .footer-report-page {
        width: 22px;
        margin-left: 5mm;
        font-size: 9pt;
    }

    .footer-field {
        padding: 0.3mm 0;
        font-size: 6pt;
    }
</style>

<div class="footer">
    <div class="footer-line"></div>

    <div class="footer-body">
        @* ReSharper disable once MissingAltAttributeInImgTag *@
        <img class="footer-logo" src="data:image/png;base64,
">

        <div class="footer-report">
            <div>
                <div class="footer-field">
                    @Model.CreatedAt.ToString("g")
                </div>
            </div>
            <div class="footer-report-page"></div>
        </div>
    </div>
</div>